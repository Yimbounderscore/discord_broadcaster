{
    "name": "discord-broadcaster",
    "version": "1.0.0",
    "description": "Broadcast messages to multiple Discord channels",
    "author": {
        "name": "Yimbounderscore",
        "email": "yimbounderscore@users.noreply.github.com"
    },
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --win --linux",
        "build:win": "electron-builder --win",
        "build:linux": "electron-builder --linux",
        "test": "vitest --environment jsdom",
        "test:watch": "vitest --watch --environment jsdom"
    },
    "build": {
        "appId": "com.discord.broadcaster",
        "productName": "Discord Broadcaster",
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm"
            ],
            "category": "Utility"
        },
        "files": [
            "**/*",
            "!node_modules/.cache/**/*",
            "!venv/**/*"
        ],
        "extraResources": [
            {
                "from": "main.py",
                "to": "main.py"
            },
            {
                "from": "check_env.py",
                "to": "check_env.py"
            },
            {
                "from": "requirements.txt",
                "to": "requirements.txt"
            }
        ]
    },
    "devDependencies": {
        "electron": "^33.2.1",
        "electron-builder": "^25.1.8",
        "jsdom": "^24.1.1",
        "vitest": "^2.1.9"
    }
}